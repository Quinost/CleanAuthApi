{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",

  "ConnectionStrings": {
    "DefaultDatabase": "AppSettings"
  },

  "JwtCfg": {
    "PrivateKeyPEM": "/Vault/PrivateKey.pem",
    "PublicKeyPEM": "/Vault/PublicKey.pem",
    "Issuer": "CleanNet",
    "Audience": "api",
    "AccessTokenExpiration": 120,
    "RefreshTokenExpiration": 480,
    "JwtBlackListWorkerDelayInHours": 1
  }
}
